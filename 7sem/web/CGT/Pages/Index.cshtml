@page
@model f1news.Pages.IndexModel
@using f1news.Models
@using Microsoft.Extensions.Options
@inject IOptions<f1news.Models.AdminSettings> AdminSettings

<div class="post-grid-container">
    @if (User.Identity.IsAuthenticated && User.Identity.Name == AdminSettings.Value.AdminEmail)
    {
        <div class="create-post-container">
            <a asp-page="/Posts/Create" class="create-post-button">+</a>
        </div>
    }

    @foreach (var post in Model.Posts)
    {
        <div class="post-card">
            <div class="post-card-header">
                <h2><a asp-page="/Posts/Details" asp-route-id="@post.Id">@post.Title</a></h2>
                <p class="post-date">@post.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
            </div>
            <p class="post-content">@(post.Content.Length > 100 ? post.Content.Substring(0, 100) + "..." : post.Content)</p>
            @if (User.Identity.IsAuthenticated && User.Identity.Name == AdminSettings.Value.AdminEmail)
            {
                <div class="post-actions">
                    <a asp-page="/Posts/Edit" asp-route-id="@post.Id" class="action-button full-width-button edit-button">Редактировать</a>
                    <a asp-page="/Posts/Delete" asp-route-id="@post.Id" class="action-button full-width-button delete-button">Удалить</a>
                </div>
            }
        </div>
    }
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .post-grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        padding: 20px;
    }

    .create-post-container {
        position: fixed;
        bottom: 20px;
        right: 20px;
    }

    .create-post-button {
        background-color: #007bff;
        color: #ffffff;
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        font-weight: bold;
        border: none;
        border-radius: 50%;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .create-post-button:hover {
        background-color: #0056b3;
        transform: scale(1.1);
    }

    .post-card {
        background-color: #ffffff;
        border: 1px solid #dddddd;
        border-radius: 10px;
        padding: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .post-card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .post-card-header h2 {
        font-size: 1.5rem;
        color: #007bff;
        margin: 0;
    }

    .post-card-header h2 a {
        text-decoration: none;
    }

    .post-card-header h2 a:hover {
        text-decoration: underline;
    }

    .post-date {
        font-size: 0.9rem;
        color: #888888;
    }

    .post-content {
        font-size: 1rem;
        color: #333333;
        margin-bottom: 15px;
    }

    .post-actions {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .action-button {
        padding: 10px;
        font-size: 1rem;
        border: none;
        border-radius: 5px;
        color: #ffffff;
        cursor: pointer;
        transition: background-color 0.3s ease;
        text-align: center;
    }

    .full-width-button {
        width: 100%;
    }

    .edit-button {
        background-color: #17a2b8;
    }

    .edit-button:hover {
        background-color: #138496;
    }

    .delete-button {
        background-color: #dc3545;
    }

    .delete-button:hover {
        background-color: #bd2130;
    }
</style>
