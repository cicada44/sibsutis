                <td>@task.Executor?.FirstName</td>
                <td>@task.Project?.Name</td>
                <td>@task.Priority</td>
                <td>@task.Status</td>
                <td>
                    <a href="@Url.Action("Edit", "Tasks", new { id = task.Id })">Edit</a>
