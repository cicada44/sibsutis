@model lab_3.Models.HomeViewModel

<h5>Projects</h5>
<table>
    <thead>
        <style>
            table {border-collapse: collapse;}
            th, td {border: 1px solid black; padding: 8px;}
        </style>
        <tr>
            <th><a asp-action="Index" asp-route-sortOrder="name">Name</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="customerCompany">Customer Company</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="contractorCompany">Contractor Company</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="startDate">Start Date</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="endDate">End Date</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="priority">Priority</a></th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model.Projects)
        {
            <tr>
                <td>@project.Name</td>
                <td>@project.CustomerCompany</td>
                <td>@project.ContractorCompany</td>
                <td>@project.StartDate.ToShortDateString()</td>
                <td>@project.EndDate?.ToShortDateString()</td>
                <td>@project.Priority</td>
                <td>
                    <a href="@Url.Action("Edit", "Projects", new { id = project.Id })">Edit</a>
                    <form asp-controller="Projects" asp-action="Delete" asp-route-id="@project.Id" method="post" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create", "Projects")">Create</a>
<br><br><br>

