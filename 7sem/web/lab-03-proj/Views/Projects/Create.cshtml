@model lab_3.Models.Project

<h1>Создать проект</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Название</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CustomerCompany">Заказчик</label>
        <input asp-for="CustomerCompany" class="form-control" />
        <span asp-validation-for="CustomerCompany" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContractorCompany">Исполнитель</label>
        <input asp-for="ContractorCompany" class="form-control" />
        <span asp-validation-for="ContractorCompany" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate">Начало работ</label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate">Завершение работ</label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Priority">Приоритет</label>
        <input asp-for="Priority" class="form-control" />
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ManagerId">Руководитель проекта</label>
        <select asp-for="ManagerId" asp-items="ViewBag.ManagerId" class="form-control"></select>
        <span asp-validation-for="ManagerId" class="text-danger"></span>
    </div>
    <br><br>
    <button type="submit" class="btn btn-primary">Создать проект</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Назад к списку проектов</a>
