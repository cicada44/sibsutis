@model lab_3.Models.Project

<h1>Детали проекта</h1>

<table class="table">
    <tr>
        <th>Название проекта</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Компания-заказчик</th>
        <td>@Model.CustomerCompany</td>
    </tr>
    <tr>
        <th>Компания-исполнитель</th>
        <td>@Model.ContractorCompany</td>
    </tr>
    <tr>
        <th>Дата начала</th>
        <td>@Model.StartDate.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Дата окончания</th>
        <td>@Model.EndDate?.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Приоритет</th>
        <td>@Model.Priority</td>
    </tr>
</table>

<a href="@Url.Action("Edit", "Projects", new { id = Model.Id })" class="btn btn-primary">Редактировать</a>
<a href="@Url.Action("Index", "Projects")" class="btn btn-secondary">Назад</a>
