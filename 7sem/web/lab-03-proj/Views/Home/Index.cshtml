@model lab_3.Models.HomeViewModel

<div class="container mt-5">
    <h2 class="text-center mb-4">
        <span class="badge bg-primary fs-3">Projects</span>
    </h2>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Project Name</th>
                <th>Customer Company</th>
                <th>Contractor Company</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Priority</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model.Projects)
            {
                <tr>
                    <td>@project.Name</td>
                    <td>@project.CustomerCompany</td>
                    <td>@project.ContractorCompany</td>
                    <td>@project.StartDate.ToShortDateString()</td>
                    <td>@project.EndDate?.ToShortDateString()</td>
                    <td>@project.Priority</td>
                    <td>
                        <a href="@Url.Action("Edit", "Projects", new { id = project.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Details", "Projects", new { id = project.Id })" class="btn btn-info btn-sm">View</a>
                        <form asp-controller="Projects" asp-action="Delete" asp-route-id="@project.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Create", "Projects")" class="btn btn-success">Add Project</a>
    
    <hr class="my-5">

    <h2 class="text-center mb-4">
        <span class="badge bg-success fs-3">Employees</span>
    </h2>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Email</td>
                    <td>
                        <a href="@Url.Action("Edit", "Employees", new { id = employee.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Details", "Employees", new { id = employee.Id })" class="btn btn-info btn-sm">View</a>
                        <form asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Create", "Employees")" class="btn btn-success">Add Employee</a>
    
    <hr class="my-5">

    <h2 class="text-center mb-4">
        <span class="badge bg-warning text-dark fs-3">Tasks</span>
    </h2>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Task Title</th>
                <th>Author</th>
                <th>Executor</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model.Tasks)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Author.FirstName @task.Author.LastName</td>
                    <td>@task.Executor?.FirstName @task.Executor?.LastName</td>
                    <td>@task.Status</td>
                    <td>@task.Priority</td>
                    <td>
                        <a href="@Url.Action("Edit", "Tasks", new { id = task.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Details", "Tasks", new { id = task.Id })" class="btn btn-info btn-sm">View</a>
                        <form asp-controller="Tasks" asp-action="Delete" asp-route-id="@task.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Create", "Tasks")" class="btn btn-success">Create Task</a>
</div>
